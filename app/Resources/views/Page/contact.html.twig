{% extends 'BlogBundle::layout.html.twig' %}

{% block title %}Contact 0s{% endblock%}

{% block body %}
    <header>
        <h1>Contact BlogFarce</h1>
    </header>

    <p>Want to contact 0s?</p>
    
    <p>{{ submittedNotice }}</p>

    <form action="{{ path('BlogBundle_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}